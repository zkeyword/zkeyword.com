header[class^='lt-']
    clear: both
    padding: 10px 30px
    box-shadow: 0 1px 4px #eee;

    .logo
        float: left
        text-indent: -999em
        width: 104px
        height: 26px
        background: url(../img/logo.png) no-repeat

    .navBar
        float: right

        span
            margin: 0 0 0 20px

section[class^='lt-']
    padding: 10px 30px

    img
        width: 100%
        height: auto

footer[class^='lt-']
    text-align: center
    background: #f7f7f7
    padding: 10px
    border-top: 1px solid #eee
    