{
    "apps": [
        {
            "name": "zkeyword",
            "script": "dist/server/index.js",
            "cwd": "/home/zkeyword.com/",
            "max_memory_restart": "1G",
            "autorestart": true,
            "node_args": [],
            "args": [],
            "env": {
                "NODE_ZKEYWORD_PORT": "3001",
                "NODE_ZKEYWORD_URL": "http://zkeyword.com",
                "NODE_ZKEYWORD_ENV": "production"
            },
            "watch": true,
            "watch_options": {
                "ignoreInitial": true
            },
            "ignore_watch": [
                "node_modules",
                "dist",
                "public"
            ]
        }
    ]
}